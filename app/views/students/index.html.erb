<% if notice %>
  <p class="alert alert-success fade in" align="center"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger fade in" align="center"><%= alert %></p>
<% end %>

<%= form_for (@student), :remote => true do |f| %>

<% if @student.errors %>
  <ul>
  <% @student.errors.full_messages.each do |e| %>
    <li><%= e %></li>
  <% end %>
  </ul>
<% end %>

<div class="row" style="padding:10px 0px 10px 0px;">
  <form class="form">
      <div class="col-sm-4">
        <div class="input-group">
            <span class="input-group-addon">學號：</span>
            <%= f.text_field :stu_id, autofocus: true, type: "text", class: "form-control" %>
          </div>
      </div>

      <div class="col-sm-3">
          <div><%= f.select 'stu_class', options_for_select(["資管系", "財金系", "行管系", "觀光系", "經濟系", "企管系",  "社心系", "英文系",  "中文系",  "日文系",  "法律系", "新聞系", "口傳系", "公廣系", "資傳系", "圖傳系", "廣電系", "數媒系", "傳管系"], "資管系"), {}, :class => 'form-control' %>
          </div>
      </div>

      <div class="col-sm-3">
          <div><%= f.select 'stu_year', options_for_select(["一年級", "二年級", "三年級", "四年級", "研修"], "一年級"), {}, :class => 'form-control' %>
          </div>
      </div>

      <div class="col-sm-2">
        <button type="reset" class="btn btn-default">清除</button>
        <%= f.submit '送出', class: "btn btn-primary" %>
        <% end %>
      </div>
  </form>
</div>

<hr>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>學號</th>
      <th>年級</th>
      <th>系所</th>
      <th>已過的時間</th>
      <th>登記投票時間</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.stu_id %></td>
        <td><%= student.stu_class %></td>
        <td><%= student.stu_year %></td>
        <td><%= time_ago_in_words(student.created_at) %></td>
        <td><%= I18n.l( student.created_at, :format => :long ) %></td>
        <!-- <%= link_to '編輯', edit_student_path(student), class: 'btn btn-sm btn-info'%> -->
        <td><%= link_to '刪除', student, method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?' }, :remote => true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @students %>
