<style media="screen">
  span{
    color: #575757;
  }
</style>


<%= form_for(@user, url: admin_user_path(@user), html: { method: :put }) do |f| %>

<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel"><%= @user.email %></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
          <p>管理員：
          <%= f.radio_button :role, "true", checked: @user.role?, data: { question: 'What is your average class size?' } %>
          <%= f.label :role, "Yes" %>
          <%= f.radio_button :role, "false", checked: @user.role?, data: { question: 'How many kids do you teach?' } %>
          <%= f.label :role, "No"  %></p>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <%= f.submit '送出', class: "btn btn-primary" %>
    </div>
  </div>
    <% end %>
</div>
